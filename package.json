{
  "name": "owl",
  "version": "0.12.0",
  "description": "Odoo Web Library (OWL)",
  "main": "src/index.ts",
  "scripts": {
    "build:js": "tsc --target esnext --module es6 --outDir dist/owl",
    "build:bundle": "rollup -c",
    "build": "npm run build:js && npm run build:bundle",
    "minify": "uglifyjs dist/owl.js -o dist/owl.min.js --compress --mangle",
    "test": "jest",
    "test:watch": "jest --watch",
    "extras:serve": "python3 extras/server.py || python extras/server.py",
    "extras": "npm run build && npm run extras:serve",
    "preextras:watch": "npm run build",
    "extras:watch": "npm-run-all  --parallel extras:serve \"build:* -- --watch\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/odoo/owl.git"
  },
  "author": "Odoo",
  "license": "GPL-3.0-or-later",
  "bugs": {
    "url": "https://github.com/odoo/owl/issues"
  },
  "homepage": "https://github.com/odoo/owl#readme",
  "devDependencies": {
    "@types/jest": "^23.3.12",
    "cpx": "^1.5.0",
    "git-rev-sync": "^1.12.0",
    "jest": "^23.6.0",
    "live-server": "^1.2.1",
    "npm-run-all": "^4.1.5",
    "rollup": "^1.6.0",
    "rollup-plugin-typescript2": "^0.20.1",
    "sass": "^1.16.1",
    "source-map-support": "^0.5.10",
    "ts-jest": "^23.10.5",
    "typescript": "^3.2.2",
    "uglify-es": "^3.3.9",
    "jest-environment-jsdom": "^24.7.1"
  },
  "dependencies": {},
  "jest": {
    "roots": [
      "<rootDir>/src",
      "<rootDir>/tests"
    ],
    "transform": {
      "^.+\\.ts?$": "ts-jest"
    },
    "verbose": false,
    "testRegex": "(/tests/.*(test|spec))\\.ts?$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
