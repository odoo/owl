{
    "name": "owl-extension",
    "version": "1.0.0",
    "description": "Devtools for owl framework Chrome Extension",
    "author": "Julien Carion, juca @ odoo",
    "scripts": {
        "templates": "cd ../.. && npm run compile_templates -- tools/devtools/src && mv templates.js tools/devtools/assets/templates.js && cd tools/devtools",
        "build": "npm run build:chrome",
        "build:chrome": "npm run templates && NODE_BROWSER=chrome rollup -c",
        "build:firefox": "npm run templates && NODE_BROWSER=firefox rollup -c",
        "dev": "npm run templates && NODE_BROWSER=chrome rollup -c",
        "prettier": "prettier --write src './*.js' './*.json'"
    },
    "prettier": {
        "printWidth": 100,
        "endOfLine": "auto"
    },
    "dependencies": {
        "@types/chrome": "0.0.203",
        "bootstrap": "^5.2.3",
        "font-awesome": "^4.7.0"
    },
    "devDependencies": {
        "@babel/preset-env": "^7.0.0",
        "@fullhuman/postcss-purgecss": "^5.0.0",
        "@rollup/plugin-node-resolve": "^9.0.0",
        "autoprefixer": "^10.0.0",
        "postcss-import": "^15.0.0",
        "postcss-nested": "^6.0.0",
        "postcss-preset-env": "^7.0.0",
        "prettier": "^2.0.0",
        "rollup": "^2.0.0",
        "rollup-plugin-copy": "^3.3.0",
        "rollup-plugin-livereload": "^2.0.0",
        "rollup-plugin-node-resolve": "^5.2.0",
        "rollup-plugin-postcss": "^4.0.0",
        "rollup-plugin-serve": "^1.0.0",
        "rollup-plugin-terser": "^7.0.2"
    }
}
