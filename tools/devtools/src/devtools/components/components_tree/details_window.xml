<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">
  <t t-name="devtools.details_window" owl="1">
    <div class="details_window my-1">
      <div id="details_window_head" class="details-panel my-1">
        <div class="name_wrapper">
          <b><t t-esc="componentName"/></b>
        </div>
      </div>
      <div class="horizontal-border">
      </div>
      <div id="props" class="details-panel my-1">
        <b>props</b>
        <t t-foreach="activeProperties" t-as="key" t-key="key">
          <Property 
            t-props="activeProperties[key]"
            updateProperty="props.updateProperty"/>
        </t>
      </div>
      <div class="horizontal-border">
      </div>
      <div id="hooks" class="details-panel my-1">
        <b>hooks</b>
      </div>
      <!-- <div class="horizontal-border">
      </div>
      <div id="rendered_by" class="details-panel my-1">
        <b>rendered by</b>
      </div> -->
    </div>
  </t>
</templates>