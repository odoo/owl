<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">
  <t t-name="devtools.DetailsWindow" owl="1">
    <div class="details_window">
      <div id="details_window_head" class="panel-top">
        <div class="name_wrapper">
          <b><t t-esc="componentName"/></b>
        </div>
        <i class="fa fa-eye search-utility me-2" aria-hidden="true" t-on-click.stop="inspectComponentInDOM"></i>
        <i class="fa fa-bug search-utility me-2" aria-hidden="true" t-on-click.stop='() => this.logComponentInConsole("component")'></i>
        <i class="fa fa-refresh search-utility me-3" aria-hidden="true" t-on-click.stop="refreshComponent"></i>
      </div>
      <div class="horizontal-border">
      </div>
      <div id="props" class="details-panel my-1">
        <b>props</b>
        <i class="fa fa-bug search-utility my-1 me-2" aria-hidden="true" t-on-click.stop='() => this.logComponentInConsole("props")'></i>
        <t t-foreach="activeProperties" t-as="key" t-key="key">
          <ObjectTreeElement 
            t-props="activeProperties[key]"
            updateObjectTreeElement="props.updateObjectTreeElement"
            updateBag="props.updateBag"
            editObjectTreeElement="props.editObjectTreeElement"/>
        </t>
      </div>
      <!-- <div class="horizontal-border">
      </div>
      <div id="hooks" class="details-panel my-1">
        <b>hooks</b>
      </div> -->
      <div class="horizontal-border">
      </div>
      <div id="subscriptions" class="details-panel my-1">
        <i class="fa fa-bug search-utility my-1 me-2" aria-hidden="true" t-on-click.stop='() => this.logComponentInConsole("subscription")'></i>
        <Subscriptions 
          subscriptions="activeSubscriptions" 
          updateObjectTreeElement="props.updateObjectTreeElement"
          updateBag="props.updateBag"
          expandSubscriptionsKeys="props.expandSubscriptionsKeys"
          editObjectTreeElement="props.editObjectTreeElement"/>
      </div>
      <div class="horizontal-border">
      </div>
      <div id="env" class="details-panel my-1">
        <b>env</b>
        <i class="fa fa-bug search-utility my-1 me-2" aria-hidden="true" t-on-click.stop='() => this.logComponentInConsole("env")'></i>
        <t t-foreach="activeEnvElements" t-as="key" t-key="key">
          <ObjectTreeElement 
            t-props="activeEnvElements[key]"
            updateObjectTreeElement="props.updateObjectTreeElement"
            updateBag="props.updateBag"
            editObjectTreeElement="props.editObjectTreeElement"/>
        </t>
      </div>
    </div>
  </t>
</templates>