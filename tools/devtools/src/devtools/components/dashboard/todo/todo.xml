<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">
    <t t-name="devtools.todo">
        <div class="form-check">
            <input class="form-check-input" type="checkbox" t-att-id="props.todo.id" t-att-checked="props.todo.done" t-on-click="checkEvent"/>
            <label class="form-check-label" t-att-class="props.todo.done ? 'text-decoration-line-through text-muted' : ''">
                <t t-esc="props.todo.id"/>. 
                <t t-esc="props.todo.description"/>
            </label>
            <span class="fa fa-remove mx-2" t-on-click="removeEvent"/>
        </div>
    </t>
</templates>
