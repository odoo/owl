<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">
    <t t-name="devtools.devtools_app">
        <nav class="flex navbar navbar-light bg-light">  
            <div class="container-fluid">             
                <Tab componentName="'Tree'" active="state.page === 'Tree'" name="'Component Tree'" switchTab.bind="switchTab"/>
                <Tab componentName="'Events'" active="state.page === 'Events'" name="'Events'" switchTab.bind="switchTab"/>
                <Tab componentName="'Dashboard'" active="state.page === 'Dashboard'" name="'Dashboard'" switchTab.bind="switchTab"/>
            </div>
        </nav>
        <div class="mt-2">       
            <t t-component="selectPage"/>
        </div>
    </t>
</templates>