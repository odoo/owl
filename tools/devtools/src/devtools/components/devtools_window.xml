<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">
  <t t-name="devtools.DevtoolsWindow" owl="1">
    <div id="container" t-on-mouseover.stop="removeHighlight" t-on-mouseout.stop="removeHighlight">
      <t t-if="state.owlStatus">
        <div class="custom-navbar panel-top">
          <Tab componentName="'ComponentsTree'" active="state.page === 'ComponentsTree'" name="'Components Tree'" switchTab.bind="switchTab"/>
          <Tab componentName="'Events'" active="state.page === 'Events'" name="'Events'" switchTab.bind="switchTab"/>
        </div>
        <div class="horizontal-border"/>
        <div class="tab-container" t-attf-style="flex-direction: row;{{state.page === 'ComponentsTree' ? 'display: flex;' : 'display: none;'}}">
          <ComponentsTree 
            selectedPath="state.selectedPath" 
            bus="bus"
            updateOwlStatus.bind="updateOwlStatus"
            addToBlacklist.bind="addToBlacklist"
          />
        </div>
        <div class="tab-container" t-attf-style="flex-direction: column;{{state.page === 'Events' ? 'display: flex;' : 'display: none;'}}">
          <Events 
            activeRecorder="state.activeRecorder" 
            bus="bus"
            events="state.events" 
            blacklist="state.componentsBlackList"
            clearEvents.bind="clearEvents"
            toggleRecorder.bind="toggleRecorder"
            selectComponent.bind="selectComponent" 
            switchTab.bind="switchTab"
            addToBlacklist.bind="addToBlacklist"
          />
        </div>
      </t>
      <t t-else="">
        Owl is not loaded on this page.
      </t>
    </div>
  </t>
</templates>