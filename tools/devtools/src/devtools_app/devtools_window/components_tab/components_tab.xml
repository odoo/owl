<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">
  <t t-name="devtools.ComponentsTab" owl="1">
    <div class="split-screen-left"  t-attf-style="width:{{store.leftWidth}}px;">
      <div class="panel-top">
        <SearchBar/>
      </div>
      <div class="horizontal-border">
      </div>
      <div id="tree-container">
        <div id="tree-wrapper" t-attf-style="width: {{getTreeWrapperWidth}}px;">
          <t t-foreach="store.apps" t-as="app" t-key="app_index">
            <TreeElement t-props="app"/> 
          </t>
        </div>
      </div>
    </div>
    <div
      class="split-screen-border"
      t-attf-style="left:{{store.leftWidth}}px;"
      t-on-mousedown="handleMouseDown"
      t-on-mouseup="handleMouseUp"
    />
    <div class="split-screen-right" t-attf-style="width:{{store.rightWidth}}px;">
      <DetailsWindow/>
    </div>
  </t>
</templates>