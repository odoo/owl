<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">
  <t t-name="devtools.DetailsWindow" owl="1">
    <div class="details-window">
      <div id="detailsWindowHead" class="panel-top">
        <div class="name-wrapper">
          &lt;<b><t t-esc="store.activeComponent.name"/></b>&gt;
        </div>
        <i title="Inspect component in the Elements tab" class="fa fa-eye utility-icon me-2" aria-hidden="true" t-on-click.stop="() => this.store.inspectComponentInDOM()"></i>
        <i title="Store component as global variable in the console" class="fa fa-bug utility-icon me-2" aria-hidden="true" t-on-click.stop='() => this.store.logComponentInConsole("instance")'></i>
        <i title="Inspect source code of component" class="fa fa-file-code-o utility-icon me-2" aria-hidden="true" t-on-click.stop="() => this.store.inspectComponentSource()"></i>
        <i title="Trigger rerender of the component" class="fa fa-refresh utility-icon me-2" aria-hidden="true" t-on-click.stop="() => this.store.refreshComponent()"></i>
      </div>
      <div class="horizontal-border">
      </div>
      <div class="details-container">
        <div id="props" style="border: none;" class="details-panel py-1">
          <div class="details-panel-head mb-2">
            <b>props</b>
            <!-- <i title="Store props as global variable in the console" class="fa fa-bug utility-icon pt-1 me-2" aria-hidden="true" t-on-click.stop='() => this.store.logComponentInConsole("props")'></i> -->
          </div>
          <t t-foreach="store.activeComponent.props" t-as="key" t-key="key">
            <ObjectTreeElement t-props="store.activeComponent.props[key]"/>
          </t>
        </div>
        <div id="subscriptions" class="details-panel py-1">
          <div class="details-panel-head">
            <b>observed state</b>
            <i title="Store observed states as global variable in the console" class="fa fa-bug utility-icon pt-1 me-2" aria-hidden="true" t-on-click.stop='() => this.store.logComponentInConsole("subscription")'></i>
          </div>
          <Subscriptions/>
        </div>
        <div id="env" class="details-panel py-1">
          <div class="details-panel-head mb-2">
            <b>env</b>
            <!-- <i title="Store env as global variable in the console" class="fa fa-bug utility-icon pt-1 me-2" aria-hidden="true" t-on-click.stop='() => this.store.logComponentInConsole("env")'></i> -->
          </div>
          <t t-foreach="store.activeComponent.env" t-as="key" t-key="key">
            <ObjectTreeElement t-props="store.activeComponent.env[key]"/>
          </t>
        </div>
        <div id="instance" class="details-panel py-1">
          <div class="details-panel-head mb-2">
            <b>instance</b>
            <!-- <i title="Store instance as global variable in the console" class="fa fa-bug utility-icon pt-1 me-2" aria-hidden="true" t-on-click.stop='() => this.store.logComponentInConsole("instance")'></i> -->
            <i title="Inspect compiled template" class="fa fa-hashtag utility-icon pt-1 me-2" aria-hidden="true" t-on-click.stop='() => this.store.inspectCompiledTemplate()'></i>
            <i title="Send raw template to console" class="fa fa-file-word-o utility-icon pt-1 me-2" aria-hidden="true" t-on-click.stop='() => this.store.inspectRAwTemplate()'></i>
          </div>
          <t t-foreach="store.activeComponent.instance" t-as="key" t-key="key">
            <ObjectTreeElement t-props="store.activeComponent.instance[key]"/>
          </t>
        </div>
      </div>
    </div>
  </t>
</templates>