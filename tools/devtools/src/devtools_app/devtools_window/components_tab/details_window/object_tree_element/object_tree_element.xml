<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">
  <t t-name="devtools.ObjectTreeElement" owl="1">
    <div class="my-0 p-0 object-line" t-att-class="attenuateIfPrototype" t-on-click.stop="toggleDisplay" t-on-contextmenu.prevent="openMenu">
      <div t-attf-style="padding-left: calc({{props.depth}} * 0.8rem + 0.3rem)">
        <t t-if="props.hasChildren">
          <i class="fa fa-caret-right mx-1" t-attf-style="cursor: pointer;{{props.toggled ? 'transform: rotate(90deg);' : ''}}"></i>
        </t>
        <t t-else="">
          <i class="fa fa-caret-right mx-1" t-attf-style="visibility: hidden;"></i>
        </t>
        <t t-out="objectName"/>
        <t t-if="props.content.length > 0">: </t> 
        <t t-if="props.contentType == 'getter'">
          <div class="getter-content" t-on-click.stop="loadGetterContent">
            <t t-out="props.content"/>
          </div>
        </t>
        <t t-else="">
          <div class="object-content" t-att-class="attenuateIfPrototype" t-on-dblclick.stop="setupEditMode">
            <t t-if="state.editMode">   
              <input t-attf-id="objectEditionInput/{{pathAsString}}" type="text" placeholder="" t-att-value="props.content" t-on-keyup="editObject"/>
            </t>
            <t t-else="">
              <t t-out="props.content"/>
            </t>
          </div> 
        </t>
      </div>
    </div>
    <div class="custom-menu hidden" t-attf-id="customMenu/{{pathAsString}}">
      <ul class="my-1">
        <li t-on-click="storeObjectAsGlobal" class="custom-menu-item">Store as global variable</li>
        <t t-if='props.contentType == "function"'>
          <li t-on-click="inspectFunctionSource" class="custom-menu-item">Inspect function source code</li>
        </t>
      </ul>
    </div>
    <t t-if="props.toggled">
      <t t-foreach="props.children" t-as="child" t-key="child.name">
        <ObjectTreeElement t-props="child"/>
      </t>
    </t>
  </t>
</templates>

