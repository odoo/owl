<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">
  <t t-name="devtools.DevtoolsWindow" owl="1">
    <div id="container" t-on-mouseover.stop="removeHighlight" t-on-mouseout.stop="removeHighlight">
      <t t-if="store.owlStatus">
        <div class="custom-navbar panel-top">
          <FrameSelector/>
          <Tab componentName="'ComponentsTab'" active="store.page === 'ComponentsTab'" name="'Components'"/>
          <Tab componentName="'EventsTab'" active="store.page === 'EventsTab'" name="'Events'"/>
        </div>
        <div class="horizontal-border"/>
        <div t-if="store.page === 'ComponentsTab'" class="tab-container" style="flex-direction: row;">
          <ComponentsTab/>
        </div>
        <div t-if="store.page === 'EventsTab'" class="tab-container" style="flex-direction: column;">
          <EventsTab/>
        </div>
      </t>
      <t t-else="">
        <div class="status-message">
          Owl is not loaded on this page.
        </div>
      </t>
    </div>
  </t>
</templates>